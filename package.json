{
  "name": "deeper-bible-software",
  "version": "1.0.0",
  "description": "Backend software for the Deeper Bible project.",
  "main": "dist/api/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "dev:api": "nodemon --watch src --ext ts --exec ts-node src/api/server.ts",
    "dev:client": "echo 'Frontend development script goes here'",
    "build": "npm run build:api && npm run build:client",
    "build:api": "tsc",
    "build:client": "echo 'Frontend build script goes here'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:api": "jest --selectProjects api",
    "test:e2e": "jest --config jest.e2e.config.ts --forceExit",
    "test:performance": "jest tests/performance --forceExit",
    "test:coverage": "jest --coverage",
    "test:ci": "npm run lint && npm run typecheck && npm run test:coverage",
    "lint": "echo 'ESLint not configured yet'",
    "typecheck": "tsc --noEmit",
    "db:migrate": "ts-node src/database/migrations/migrate.ts",
    "db:seed": "ts-node src/database/seeds/seed.ts",
    "populate-bible": "ts-node scripts/populate-niv-bible.ts",
    "populate-bible:test": "ts-node scripts/populate-niv-bible.ts --test",
    "start": "node dist/api/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@pinecone-database/pinecone": "^6.1.2",
    "@prisma/client": "^6.14.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-mongo-sanitize": "^1.3.2",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.10",
    "@types/pg": "^8.11.0",
    "@types/redis": "^4.0.11",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/winston": "^2.4.4",
    "@types/xml2js": "^0.4.14",
    "@types/yamljs": "^0.2.33",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.7.4",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "google-auth-library": "^9.6.3",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "isomorphic-dompurify": "^2.26.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.3",
    "openai": "^4.26.0",
    "pg": "^8.11.3",
    "playwright": "^1.54.2",
    "prisma": "^6.14.0",
    "puppeteer": "^24.16.2",
    "redis": "^4.7.1",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "xml2js": "^0.6.2",
    "xss": "^1.0.15",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@jest/globals": "^29.7.0",
    "@types/autocannon": "^7.12.7",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "autocannon": "^8.0.0",
    "jest": "^29.7.0",
