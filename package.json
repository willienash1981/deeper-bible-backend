{
  "name": "deeper-bible-software",
  "version": "1.0.0",
  "description": "Backend software for the Deeper Bible project.",
  "main": "dist/api/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "dev:api": "nodemon --watch src --ext ts --exec ts-node src/api/server.ts",
    "dev:client": "echo 'Frontend development script goes here'",
    "build": "npm run build:api && npm run build:client",
    "build:api": "tsc",
    "build:client": "echo 'Frontend build script goes here'",
    "test": "jest",
    "test:e2e": "jest --config jest.e2e.config.js --forceExit",
    "db:migrate": "ts-node src/database/migrations/migrate.ts",
    "db:seed": "ts-node src/database/seeds/seed.ts",
    "start": "node dist/api/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.10",
    "@types/pg": "^8.11.0",
    "@types/redis": "^4.0.11",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.8",
    "@types/winston": "^2.4.4",
    "@types/xml2js": "^0.4.14",
    "@types/yamljs": "^0.2.33",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "google-auth-library": "^9.6.3",
    "helmet": "^7.1.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.3",
    "openai": "^4.26.0",
    "pg": "^8.11.3",
    "redis": "^4.6.13",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xml2js": "^0.6.2",
    "yamljs": "^0.3.0"
  },
