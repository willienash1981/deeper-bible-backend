{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@ai/*": ["src/ai/*"],
      "@shared/*": ["src/shared/*"],
      "@services/*": ["src/services/*"],
      "@test-utils/*": ["tests/utils/*"],
      "@fixtures/*": ["tests/fixtures/*"]
    },
    "types": ["node", "jest", "@types/supertest"],
    "allowJs": true,
    "isolatedModules": false
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "jest.config.ts",
    "jest.e2e.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}