# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://admin:password@localhost:5432/deeperbible

# Redis Configuration
REDIS_URL=redis://localhost:6379

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Bible API Configuration
BIBLE_API_KEY=your-bible-api-key-here
BIBLE_API_BASE_URL=https://api.scripture.api.bible/v1

# Authentication & Security
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret-here
BCRYPT_ROUNDS=12

# Google OAuth (if using)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# AI Service Configuration
AI_COST_BUDGET_DAILY=10.00
AI_COST_BUDGET_MONTHLY=300.00
ENABLE_AI_CACHING=true

# Pinecone (Vector Database)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=deeper-bible-embeddings

# Performance & Caching
CACHE_TTL=3600
ENABLE_COMPRESSION=true
MAX_PAYLOAD_SIZE=10mb

# Development
DEBUG=true
ENABLE_SWAGGER=true