# Deeper Bible Backend - Environment Configuration Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_DB=0
REDIS_TLS=false
REDIS_TLS_REJECT_UNAUTHORIZED=true
REDIS_TLS_SERVERNAME=
REDIS_MAX_CONNECTIONS=10
REDIS_IDLE_TIMEOUT=60000

# Cache Configuration
CACHE_ENCRYPT_KEYS=false
CACHE_RATE_LIMIT=1000
CACHE_BURST_LIMIT=100

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
API_SECRET_KEY=your-api-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Bible API Configuration (if using external services)
BIBLE_API_KEY=your-bible-api-key-here
BIBLE_API_URL=https://api.scripture.api.bible

# AI Service Configuration (if applicable)
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-4
AI_MAX_TOKENS=1000

# Monitoring & Logging
METRICS_INTERVAL=60000
CORRELATION_ID_HEADER=x-correlation-id
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60000
CIRCUIT_BREAKER_MONITORING_PERIOD=300000

# Database Configuration (if using)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=deeper_bible
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password
DB_SSL=false

# External Service URLs
FRONTEND_URL=http://localhost:3001
ADMIN_URL=http://localhost:3002

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# Development Only (remove in production)
DEBUG_CACHE=false
DEBUG_PERFORMANCE=false
ENABLE_SWAGGER=true